{
	"compilerOptions": {
		"target": "esnext",
		"useDefineForClassFields": true,
		"module": "esnext",
		"moduleResolution": "node",
		"strict": true,
		"jsx": "preserve",
		"sourceMap": true,
		"resolveJsonModule": true,
		"esModuleInterop": true,
		"allowJs": true,
		"checkJs": false,
		"newLine": "lf",
		"lib": ["esnext", "dom"],
		"types": ["vite/client"],
		"baseUrl": "src",
		"paths": {
			"@/*": ["./*"]
		}
	},
	"include": ["src/**/*.ts", "src/**/*.d.ts", "src/**/*.tsx", "src/**/*.vue", "build/**/*.ts", "mocks/**/*.ts"],
	"exclude": ["node_modules"]
}
